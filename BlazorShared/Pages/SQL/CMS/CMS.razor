@namespace BlazorShared.Pages


@page "/SQL/CMS"


<PageContainer Title="CMS 数据导入">
	<Content>
		<span>
			Form pages are used to collect or verify information to users, and basic forms are common in scenarios
			where there are fewer data items.
		</span>
	</Content>
	<ChildContent>
		<Card>
			<GridRow>
				<GridCol Span="24">
					<AntDesign.Input @bind-Value="@directoryPath">
						<AddOnAfter><Button OnClick="OpenDialog">选择文件夹</Button></AddOnAfter>
					</AntDesign.Input>
				</GridCol>
				<GridCol Span="16" Offset="8">
					<Button Type="primary" OnClick="@(()=>{ _visible = true; })">
						进行配置
					</Button>
				</GridCol>
			</GridRow>

		</Card>
		<Modal Title="@title" Visible="@_visible" OnOk="@HandleOk" OnCancel="@HandleCancel">
			
		</Modal>
	</ChildContent>

</PageContainer>